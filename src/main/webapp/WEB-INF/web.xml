<?xml version="1.0" encoding="UTF-8" ?>

<web-app>
  <display-name>JustTodoList</display-name>
  <servlet>
    <servlet-name>JustTodoListServlet</servlet-name>
    <servle-class>org.springframework.web.servlet.DispatcherServlet</servle-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB_INF/main.xml</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>JustTodoListServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
